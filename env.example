# Converse.js Configuration via Environment Variables
# Copy this file to .env and customize as needed

# ============================================================================
# APP METADATA
# ============================================================================
APP_TITLE=Converse
APP_DESCRIPTION=Converse XMPP/Jabber Chat
APP_AUTHOR=JC Brand

# ============================================================================
# APPEARANCE
# ============================================================================
# Theme options: default, cyberpunk, dracula, nord
CONVERSE_THEME=default
CONVERSE_DARK_THEME=dracula

# Show background image with Converse logo
CONVERSE_SHOW_BACKGROUND=true

# Colorize usernames per XEP-0392
CONVERSE_COLORIZE_USERNAME=false

# Use system emojis (true) or Twemoji images (false)
CONVERSE_USE_SYSTEM_EMOJIS=true

# ============================================================================
# CONNECTION SETTINGS
# ============================================================================
# Authentication method: login, external, anonymous, prebind
CONVERSE_AUTHENTICATION=login

# BOSH connection URL (HTTP binding)
CONVERSE_BOSH_SERVICE_URL=https://conversejs.org/http-bind/

# WebSocket URL (leave empty to disable, more modern than BOSH)
CONVERSE_WEBSOCKET_URL=

# Auto-login (requires JID and password to be set, or credentials_url)
CONVERSE_AUTO_LOGIN=false

# Auto-reconnect when connection drops
CONVERSE_AUTO_RECONNECT=true

# Keep user logged in across page loads
CONVERSE_KEEPALIVE=true

# Default JID for auto-login (username@domain or just domain for anonymous)
CONVERSE_JID=

# ============================================================================
# DOMAIN RESTRICTIONS
# ============================================================================
# Default domain (users can login with just username)
CONVERSE_DEFAULT_DOMAIN=

# Locked domain (only this domain allowed, no others)
CONVERSE_LOCKED_DOMAIN=

# MUC (Multi-User Chat) domain
CONVERSE_MUC_DOMAIN=

# Lock MUC domain: false, true, or 'hidden'
CONVERSE_LOCKED_MUC_DOMAIN=false

# ============================================================================
# UI BEHAVIOR
# ============================================================================
# View mode: fullscreen, overlayed, embedded
CONVERSE_VIEW_MODE=fullscreen

# Show control box by default
CONVERSE_SHOW_CONTROLBOX_BY_DEFAULT=false

# Prevent closing control box
CONVERSE_STICKY_CONTROLBOX=false

# Allow user to logout
CONVERSE_ALLOW_LOGOUT=true

# Allow new user registration
CONVERSE_ALLOW_REGISTRATION=true

# Show send button in chat
CONVERSE_SHOW_SEND_BUTTON=true

# Show message author avatars
CONVERSE_SHOW_MESSAGE_AVATAR=true

# Show retraction warning when deleting messages
CONVERSE_SHOW_RETRACTION_WARNING=true

# ============================================================================
# MESSAGING FEATURES
# ============================================================================
# Message archiving: undefined, never, always, roster
CONVERSE_MESSAGE_ARCHIVING=always

# Timeout for fetching archived messages (milliseconds)
CONVERSE_MESSAGE_ARCHIVING_TIMEOUT=20000

# Number of archived messages per page
CONVERSE_ARCHIVED_MESSAGES_PAGE_SIZE=50

# Allow message corrections: all, last, or false
CONVERSE_ALLOW_MESSAGE_CORRECTIONS=all

# Allow message retraction: all, own, moderator, or false
CONVERSE_ALLOW_MESSAGE_RETRACTION=all

# Allow XEP-0393 message styling (bold, italic, etc)
CONVERSE_ALLOW_MESSAGE_STYLING=true

# Render media (images, audio, video) inline
CONVERSE_RENDER_MEDIA=true

# Show images inline
CONVERSE_SHOW_IMAGES_INLINE=true

# Use OMEMO encryption by default
CONVERSE_OMEMO_DEFAULT=false

# Clear cache on logout
CONVERSE_CLEAR_CACHE_ON_LOGOUT=false

# Persistent storage: IndexedDB, localStorage, sessionStorage
CONVERSE_PERSISTENT_STORE=IndexedDB

# ============================================================================
# ROSTER & CONTACTS
# ============================================================================
# Show roster groups
CONVERSE_ROSTER_GROUPS=true

# Hide offline users in roster
CONVERSE_HIDE_OFFLINE_USERS=false

# Allow removing contacts
CONVERSE_ALLOW_CONTACT_REMOVAL=true

# Allow contact requests
CONVERSE_ALLOW_CONTACT_REQUESTS=true

# Auto-subscribe to contact requests
CONVERSE_AUTO_SUBSCRIBE=false

# Allow messaging users not in roster
CONVERSE_ALLOW_NON_ROSTER_MESSAGING=false

# ============================================================================
# MULTI-USER CHAT (MUC/GROUPCHATS)
# ============================================================================
# Allow bookmarks
CONVERSE_ALLOW_BOOKMARKS=true

# Allow public bookmarks (if server doesn't support private)
CONVERSE_ALLOW_PUBLIC_BOOKMARKS=false

# Auto-list rooms on MUC server
CONVERSE_AUTO_LIST_ROOMS=false

# Allow MUC invitations
CONVERSE_ALLOW_MUC_INVITATIONS=true

# Use JID node as MUC nickname
CONVERSE_MUC_NICKNAME_FROM_JID=false

# ============================================================================
# NOTIFICATIONS
# ============================================================================
# Play notification sounds
CONVERSE_PLAY_SOUNDS=false

# Show desktop notifications
CONVERSE_SHOW_DESKTOP_NOTIFICATIONS=true

# Desktop notification duration (ms, 0 = until dismissed)
CONVERSE_NOTIFICATION_DELAY=5000

# Show chat state change notifications
CONVERSE_SHOW_CHAT_STATE_NOTIFICATIONS=false

# ============================================================================
# PRESENCE & STATUS
# ============================================================================
# Seconds until status becomes 'away' (0 to disable)
CONVERSE_AUTO_AWAY=300

# Seconds until status becomes 'extended away' (0 to disable)
CONVERSE_AUTO_XA=900

# Presence priority (-128 to 127)
CONVERSE_PRIORITY=0

# Client State Indication waiting time (0 to disable)
CONVERSE_CSI_WAITING_TIME=0

# Idle presence timeout (seconds, 0 to disable)
CONVERSE_IDLE_PRESENCE_TIMEOUT=300

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================
# Ping interval to keep connection alive (seconds, 0 to disable)
CONVERSE_PING_INTERVAL=60

# Enable Stream Management (XEP-0198)
CONVERSE_ENABLE_SMACKS=true

# Internationalization (language code: en, de, fr, es, etc.)
CONVERSE_I18N=en
